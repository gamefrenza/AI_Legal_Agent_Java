{
  "rules": [
    {
      "jurisdiction": "US-CA",
      "ruleName": "CCPA_EMAIL",
      "description": "California Consumer Privacy Act - Email data collection requires explicit consent notice",
      "regexPattern": "\\b[A-Za-z0-9._%+-]+@[A-Za-z0-9.-]+\\.[A-Z|a-z]{2,}\\b",
      "severity": "HIGH",
      "active": true
    },
    {
      "jurisdiction": "US-CA",
      "ruleName": "CCPA_PERSONAL_INFO",
      "description": "CCPA requires disclosure of personal information collection practices",
      "regexPattern": "(?i)(social security|ssn|driver.?license|passport)",
      "severity": "HIGH",
      "active": true
    },
    {
      "jurisdiction": "US-CA",
      "ruleName": "CCPA_SALE_DISCLOSURE",
      "description": "CCPA requires disclosure if personal information is sold or shared",
      "regexPattern": "(?i)(sell|share|disclose).{0,50}(personal|information|data)",
      "severity": "MEDIUM",
      "active": true
    },
    {
